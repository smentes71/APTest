@model RaspberryPi

@{
    ViewData["Title"] = "Cihaz Düzenle";
}

<div class="max-w-2xl mx-auto">
    <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Cihaz Düzenle - @Model.Name</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="space-y-4">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700">Cihaz Adı</label>
                    <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" />
                    <span asp-validation-for="Name" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="IpAddress" class="block text-sm font-medium text-gray-700">IP Adresi</label>
                    <input asp-for="IpAddress" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" />
                    <span asp-validation-for="IpAddress" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Group" class="block text-sm font-medium text-gray-700">Grup</label>
                    <input asp-for="Group" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" />
                    <span asp-validation-for="Group" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Location" class="block text-sm font-medium text-gray-700">Konum</label>
                    <input asp-for="Location" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" />
                    <span asp-validation-for="Location" class="text-sm text-red-600"></span>
                </div>

                <div class="flex justify-end space-x-3 pt-4">
                    <a href="@Url.Action("Index", "Devices")" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                        İptal
                    </a>
                    <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
                        Güncelle
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}