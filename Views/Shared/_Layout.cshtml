<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Raspberry Pi Control</title>

    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

   


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow-lg">
        <div class="container mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="text-xl font-semibold text-gray-700">
                    <a href="/" class="flex items-center space-x-2">
                        <i class="fas fa-microchip text-purple-600"></i>
                        <span>Raspberry Pi Control</span>
                    </a>
                </div>
                <div class="hidden md:flex space-x-8">
                    <div class="relative group">
                        <a href="/Devices" class="text-gray-700 hover:text-purple-600 px-3 py-2 rounded-md text-sm font-medium flex items-center space-x-1">
                            <i class="fas fa-server mr-1"></i>
                            <span>Cihaz İşlemleri</span>
                        </a>
                        <div class="absolute z-10 hidden group-hover:block w-48 bg-white shadow-lg rounded-md py-1">
                            <a href="/Devices" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">Cihaz Listesi</a>
                            <a href="/Devices/Add" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">Cihaz Ekle/Sil/Güncelle</a>
                            <a href="/Home/Index" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">Cihaz İzleme</a>
                        </div>
                    </div>
                    <div class="relative group">
                        <a href="/Groups" class="text-gray-700 hover:text-purple-600 px-3 py-2 rounded-md text-sm font-medium flex items-center space-x-1">
                            <i class="fas fa-users-cog mr-1"></i>
                            <span>Grup/Rol İşlemleri</span>
                        </a>
                        <div class="absolute z-10 hidden group-hover:block w-48 bg-white shadow-lg rounded-md py-1">
                            <a href="/Groups" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">Grup Listesi</a>
                            <a href="/Groups/Add" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">Yeni Grup Ekle</a>
                            <a href="/Roles" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">Rol Yönetimi</a>
                        </div>
                    </div>
                    <div class="relative group">
                        <a href="/Tasks" class="text-gray-700 hover:text-purple-600 px-3 py-2 rounded-md text-sm font-medium flex items-center space-x-1">
                            <i class="fas fa-tasks mr-1"></i>
                            <span>Görevlendirmeler</span>
                        </a>
                        <div class="absolute z-10 hidden group-hover:block w-48 bg-white shadow-lg rounded-md py-1">
                            <a href="/Tasks" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">Görev Listesi</a>
                            <a href="/Tasks/Add" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">Yeni Görev Ekle</a>
                            <a href="/Tasks/Calendar" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">Görev Takvimi</a>
                        </div>
                    </div>
                </div>
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button type="button" class="text-gray-700 hover:text-purple-600 focus:outline-none focus:text-purple-600" aria-label="Toggle menu">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>
        </div>
        <!-- Mobile menu -->
        <div class="hidden md:hidden">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="/Devices" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-purple-600 hover:bg-purple-50 rounded-md">
                    Cihaz İşlemleri
                </a>
                <a href="/Groups" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-purple-600 hover:bg-purple-50 rounded-md">
                    Grup/Rol İşlemleri
                </a>
                <a href="/Tasks" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-purple-600 hover:bg-purple-50 rounded-md">
                    Görevlendirmeler
                </a>
            </div>
        </div>
    </nav>

    <main class="container mx-auto px-4 py-8">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline">@TempData["SuccessMessage"]</span>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="bg-white mt-8 py-4">
        <div class="container mx-auto px-6">
            <p class="text-center text-gray-600">© @DateTime.Now.Year - Raspberry Pi Control Panel</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Mobile menu toggle script -->
    <script>
        document.querySelector('button[aria-label="Toggle menu"]').addEventListener('click', function() {
            const mobileMenu = document.querySelector('.md\\:hidden + .hidden');
            mobileMenu.classList.toggle('hidden');
        });
    </script>
</body>
</html>